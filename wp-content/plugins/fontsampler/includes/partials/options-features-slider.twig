{% extends 'partials/options-row.twig' %}

{% block label %}{{ header }}{% endblock %}

{% block custom %}
    {% if not settings %}
        <label class="fontsampler-radio">
            <input type="radio" name="{{ label }}_use_default" value="0"
                   class="fontsampler-checkbox-ui-block"
                   {% if not use_default %} checked="checked" {% endif %}>
        </label>
    {% endif %}
    <div class="fontsampler-options-row-values">
        {{ include ('partials/slider.twig', {
            label: slider_label,
            name: slider_name,
            value: use_default ? slider_default : initial,
            min: slider_min,
            max: slider_max,
            group: slider_group,
            type: slider_type
        }) }}
    </div>
{% endblock %}

{% block default %}
    {% if not settings %}
        <label class="fontsampler-radio">
            <input type="radio" name="{{ label }}_use_default" value="1"
                    {% if use_default or set_uses_defaults == 1 %} checked="checked" {% endif %}>
            <span class="settings-description">Use Default: <span class="fontsampler-default-value">{{ slider_default }}</span></span>
        </label>
    {% endif %}
{% endblock %}